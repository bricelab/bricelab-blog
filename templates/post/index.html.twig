{% extends 'admin_base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Remontée des résultats par arrondissement</h1>
        <div class="btn-toolbar mb-2 pt-2">
{#            {% if is_granted('ROLE_ADMIN') %}#}
                <a href="{{ path('post_index') }}" class="btn btn-primary">
                    <i class="fas fa-download fw-bold"></i>
                    Exporter
                </a>
{#            {% endif %}#}
{#            {% if is_granted('ROLE_RESPONSABLE') %}#}
                <a href="{{ path('post_new') }}" class="btn btn-success ms-2 me-2">
                    <i class="fas fa-plus fw-bold"></i>
                    Nouveau
                </a>
{#            {% endif %}#}
{#            {% if is_granted('ROLE_SUPER_ADMIN') %}#}
{#                {{ include('resultat/_purge_form.html.twig') }}#}
{#            {% endif %}#}
        </div>
    </div>

    <div class="row mt-3 mb-5">
        <div class="col-12">
            <div class="card pt-3">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-sm">
                            <thead>
                            <tr>
                                <th></th>
                                <th>Publié le</th>
                                <th></th>
                                <th>Titre</th>
                                <th>Résumé</th>
{#                                <th>actions</th>#}
                            </tr>
                            </thead>
                            <tbody>
                            {% for post in paginator.results %}
                                <tr>
                                    <td style="text-decoration: none !important;">
                                        <a href="{{ path('post_show', {'id': post.id}) }}" class="fw-bold mx-3" style="text-decoration: none !important;">
                                            <i class="fas fa-eye"></i>
                                            {#                                            {{ loop.index }}#}
                                        </a>
{#                                        {% if is_granted('ROLE_RESPONSABLE') %}#}
                                            <a href="{{ path('post_edit', {'id': post.id}) }}" class="fw-bold" style="text-decoration: none !important;">
                                                <i class="fas fa-pen"></i>
                                                {#                                            Modifier#}
                                            </a>
                                            {{ include('post/_delete_form.html.twig') }}
{#                                        {% endif %}#}
                                    </td>
                                    <td>{{ post.publishedAt ? post.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
                                    <td><img src="{{ post.featuredImage }}" class="" alt="Thumbnail" width="50" height="100%"></td>
                                    <td>{{ post.title }}</td>
                                    <td>{{ post.summary }}</td>
{#                                    <td>#}
{#                                        <a href="{{ path('post_show', {'id': post.id}) }}">show</a>#}
{#                                        <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>#}
{#                                    </td>#}
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="10">Aucun élément trouvé.</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        {{ include('components/pagination.html.twig', {
                            currentPage: paginator.currentPage,
                            lastPage: paginator.lastPage,
                            position: 'right'
                        }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
