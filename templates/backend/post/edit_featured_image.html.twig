{% extends 'admin_base.html.twig' %}

{% block title %}
    {{ post.title }} {{ parent() }}
{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">{{ post.title }}</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <a href="{{ path('post_index') }}" class="btn btn-primary mx-2">
                <i class="fas fa-backspace"></i>
            </a>
{#            {% if is_granted('ROLE_ADMIN') %}#}
{#                {{ include('post/_delete_form_button.html.twig') }}#}
{#            {% endif %}#}
        </div>
    </div>

    <div class="row mt-3 mb-5">
        <div class="col-12">
            <div class="card pt-3">
                <div class="card-body">
                    {{ include('backend/post/_form.html.twig', {'button_label': 'Modifier'}) }}
                    <div class="text-center mx-auto mt-5">
                        <img
                                src="{{ asset("/posts/images/featured/" ~ post.featuredImage) | imagine_filter('view_post_image_thumbnail') }}"
                                alt=""
                                class="img-fluid text-center mx-auto"
                        >
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
